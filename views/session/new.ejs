<form action="/session/create" method="POST" class="form-signin">
    <h2 class="form-signin-heading">Por favor ingresa...</h2>

    <% if(flash && flash.error) { %>
        <ul class="alert alert-success" style="position:relative">
    <%  Object.keys(flash.error).forEach(function(error) {  %>
          <li><%- JSON.stringify(flash.error[error]) %></li>
    <%  }) %>
        </ul>
    <% }%>

    <div class="control-group">
        <input type="text" class="form-control" placeholder="Direccion email" name="email" id="email">
    </div>
    <div class="control-group">
        <input type="text" class="form-control" placeholder="ContraseÃ±a" name="password" id="password">
    </div>
    <input type="submit" value="Ingresar" class="btn btn-lg btn-primary btn-block" />
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>
